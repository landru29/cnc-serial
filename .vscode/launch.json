    "version": "0.2.0",
    "configurations": [
        {
            "name": "With buttons",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd",
            "console": "integratedTerminal",
            "args": ["mock", "../internal/gcode/grbl/testdata/prog01.gcode"],
            "buildFlags": ["-tags", "withbutton"]
        },
        {
            "name": "No-buttons",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd",
            "console": "integratedTerminal",
            "args": ["mock", "../internal/gcode/grbl/testdata/prog01.gcode"]
        },
        {
            "name": "RPC client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd",
            "console": "integratedTerminal",
            "args": ["rpc", "../internal/gcode/grbl/testdata/prog01.gcode"]
        },
        {
            "name": "agent mock",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd",
            "args": ["agent", "rpc", "mock"],
        },
        {
            "name": "Serial",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd",
            "console": "integratedTerminal",
            "args": ["serial", "--port", "/dev/ttyUSB0"]
        },
        {
            "name": "Debug-remote",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "localhost",
            "cwd": "${workspaceFolder}",
            "trace": "verbose"
        }
    ]
}